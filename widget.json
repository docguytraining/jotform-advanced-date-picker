{
  "title": "Advanced Date Picker",
  "version": "1.0.0",
  "description": "Select individual conflict dates within a configured range.",
  "author": "Paul Pehrson",
  "email": "paulpehrson@gmail.com",
  "license": "MIT",
  "type": "iframe",
  "width": "100%",
  "height": "420px",
  "assets": {
    "js": [
      "flatpickr.js",
      "advanced-date-picker.js",
      "widget.js"
    ],
    "css": [
      "flatpickr.min.css",
      "style.css"
    ]
  },
  "settings": [
    {
      "name": "startDate",
      "type": "text",
      "label": "Start Date (YYYY-MM-DD)",
      "default": "2025-08-15"
    },
    {
      "name": "endDate",
      "type": "text",
      "label": "End Date (YYYY-MM-DD)",
      "default": "2025-09-30"
    },
    {
      "name": "minSelectableDates",
      "type": "number",
      "label": "Minimum Dates to Select",
      "default": 0
    },
    {
      "name": "maxSelectableDates",
      "type": "number",
      "label": "Maximum Dates to Select",
      "default": 20
    },
    {
      "name": "displayFormat",
      "type": "text",
      "label": "Date Display Format",
      "default": "Y-m-d",
      "hint": "Examples: Y-m-d (2025-08-19), d M (19 Aug), D, M j (Tue, Aug 19)"
    },
    {
      "name": "allowedWeekday",
      "type": "checkbox-group",
      "label": "Allowed Days of the Week",
      "options": [
        { "label": "Sunday", "value": "Sunday" },
        { "label": "Monday", "value": "Monday" },
        { "label": "Tuesday", "value": "Tuesday" },
        { "label": "Wednesday", "value": "Wednesday" },
        { "label": "Thursday", "value": "Thursday" },
        { "label": "Friday", "value": "Friday" },
        { "label": "Saturday", "value": "Saturday" }
      ],
      "default": [
        "Sunday",
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday"
      ],
      "hint": "Uncheck any days of the week you want to exclude from selection."
    },
    {
      "name": "excludedDates",
      "type": "text",
      "label": "Excluded Dates (comma-separated)",
      "default": "",
      "hint": "List specific dates to exclude (e.g., 2025-09-02,2025-08-31)"
    }
  ]
}
