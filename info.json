{
  "title": "Advanced Date Picker",
  "version": "1.0.0",
  "description": "Select individual conflict dates within a configured range.",
  "author": "Paul Pehrson",
  "email": "paulpehrson@gmail.com",
  "license": "MIT",
  "included-scripts":[
    {
      "file":"advanced-date-picker.js",
      "description":"Core script functionality that is reusable. Required"
    },
    {
      "file":"index-scripts.js",
      "description":"Used only to render on example page. Not Required except for example page"
    },
    {
      "file":"widget.js",
      "description":"Connects jotform to script. Required ONLY for Jotform integration"
    }
  ],
  "requires": [
    {
      "name":"Flatpickr",
      "version": "4",
      "url":"https://cdn.jsdelivr.net/npm/flatpickr"
    }
  ],
  "settings": [
    {
      "name": "startDate",
      "type": "text",
      "label": "Start Date (YYYY-MM-DD)",
      "default": "2025-08-15"
    },
    {
      "name": "endDate",
      "type": "text",
      "label": "End Date (YYYY-MM-DD)",
      "default": "2025-09-30"
    },
    {
      "name": "minSelectableDates",
      "type": "number",
      "label": "Minimum Dates to Select",
      "default": 0
    },
    {
      "name": "maxSelectableDates",
      "type": "number",
      "label": "Maximum Dates to Select",
      "default": 20
    },
    {
      "name": "displayFormat",
      "type": "text",
      "label": "Date Display Format",
      "default": "Y-m-d",
      "hint": "Examples: Y-m-d (2025-08-19), d M (19 Aug), D, M j (Tue, Aug 19)"
    },
    {
      "name": "allowedWeekdays",
      "type": "checkbox-group",
      "label": "Allowed Days of the Week",
      "options": [
        { "label": "Sunday", "value": "0" },
        { "label": "Monday", "value": "1" },
        { "label": "Tuesday", "value": "2" },
        { "label": "Wednesday", "value": "3" },
        { "label": "Thursday", "value": "4" },
        { "label": "Friday", "value": "5" },
        { "label": "Saturday", "value": "6" }
      ],
      "default": ["0", "1", "2", "3", "4", "5", "6"],
      "hint": "Uncheck any days of the week you want to exclude from selection."
    },
    {
      "name": "excludedDates",
      "type": "text",
      "label": "Excluded Dates (comma-separated)",
      "default": "",
      "hint": "List specific dates to exclude (e.g., 2025-09-02,2025-08-31)"
    }
  ]
}
